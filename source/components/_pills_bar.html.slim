- close      ||= false
- back       ||= false
- extraclass ||= ''

.lds-pills class='#{extraclass}'
  span.lds-pills__caption
    | #{text}
  - if close.present?
    button type="button" class="close" aria-label="Close"
      span aria-hidden="true"
        i.icon-ic-close

  - if back.present?
    i.icon-ic-back-arrow
