.lds-switch
  input type="checkbox" id=(newId = rand(1..100)) name="set-name" class="lds--switch-input" checked= ('checked' if checked.present?) disabled= ('disabled' if disabled.present?)
    label for=(newId.dup) class="lds--switch-label"
      - if label_selected.present? || label_unselected.present?
        span.switch--label-on.bx--type-label.selected #{label_selected}
        span.switch--label-off.bx--type-label #{label_unselected}
