.o-home-nav
  .nav-content.row
    - data.home_nav.home_nav.each_with_index do |element, index|
      .item.col-xs-6.col-sm-3
        .flipper
          .front
            = svg_tag "#{element.image}"
            h4.bx--type-h4  = element.title
          .back id="#{index}"
            = link_to element.link do
              .header
                = svg_tag "#{element.imagexs}"
                h4.bx--type-h4  = element.title
              p.text = element.text
              = link_to 'View more', element.link, class: 'link'
